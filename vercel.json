{
	"version": 2,
	"public": true,
	"buildCommand": "pnpm install && pnpm build",
	"outputDirectory": "assets",
	"builds": [
		{
			"src": "gymshark-mcp-server/src/server.ts",
			"use": "@vercel/node",
			"config": {
				"runtime": "node18.x"
			}
		}
	],
	"routes": [
		{
			"src": "/(.*\\.(?:js|css|html|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot)?)$",
			"dest": "/assets/$1",
			"headers": {
				"Access-Control-Allow-Origin": "*"
			}
		},
		{
			"src": "/mcp(.*)",
			"dest": "gymshark-mcp-server/src/server.ts",
			"headers": {
				"Access-Control-Allow-Origin": "*",
				"Access-Control-Allow-Methods": "GET, POST, OPTIONS",
				"Access-Control-Allow-Headers": "Content-Type"
			}
		}
	]
}
